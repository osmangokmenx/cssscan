{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 2,

  "name": "CSS Scan",
  "description": "__MSG_description__",
  "default_locale": "en",
  "version": "3.8.1",
  "homepage_url": "https://getcssscan.com",
  "icons": {
    "96": "icon.png",
    "128": "icon_128.png"
  },

  "browser_action": {
    "default_icon": "icon.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "<all_urls>",
    "contextMenus",
    "clipboardWrite"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "web_accessible_resources": [
    "icon.png",
    "spinner.svg",
    "fontawesome/css/fontawesome.min.css",
    "fontawesome/css/solid.min.css",
    "fontawesome/webfonts/fa-solid-900.eot",
    "fontawesome/webfonts/fa-solid-900.svg",
    "fontawesome/webfonts/fa-solid-900.ttf",
    "fontawesome/webfonts/fa-solid-900.woff",
    "fontawesome/webfonts/fa-solid-900.woff2",
    "tippy.css"
  ],
  "content_security_policy": "script-src 'self' 'sha256-DiboVkmKE5P7O4rojKQ5divprLa+AogUBM7KzOXORqI='",
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Ctrl+Shift+S",
        "mac": "Ctrl+Shift+S",
        "chromeos": "Ctrl+Shift+S",
        "linux": "Ctrl+Shift+S"
      }
    },
    "activate-grid": {
      "suggested_key": {
        "windows": "Ctrl+Shift+X",
        "mac": "Ctrl+Shift+X",
        "chromeos": "Ctrl+Shift+X",
        "linux": "Ctrl+Shift+X"
      },
      "description": "__MSG_toggle_grid__"
    },
    "scan-parent": {
      "suggested_key": {
        "windows": "Ctrl+Shift+E",
        "mac": "Ctrl+Shift+E",
        "chromeos": "Ctrl+Shift+E",
        "linux": "Ctrl+Shift+E"
      },
      "description": "__MSG_scan_parent__"
    }
  }
}
